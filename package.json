{
    "name": "react-snapencode-player",
    "version": "1.0.0",
    "description": "Universal React Video Player Library",
    "main": "dist/react-snapencode-player.js",
    "module": "dist/react-snapencode-player.esm.js",
    "unpkg": "dist/react-snapencode-player.min.js",
    "jsdelivr": "dist/react-snapencode-player.min.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "// BUILD SCRIPTS (for creating the distributable library)": "",
        "build": "npm run clean && npm run build:umd && npm run build:esm && npm run build:types",
        "build:esm": "webpack --config webpack.esm.config.js --mode=production",
        "build:types": "tsc --project tsconfig.types.json",
        "// DEVELOPMENT & TESTING SCRIPTS": "",
        "start": "webpack serve --config webpack.dev.config.js",
        "clean": "rimraf dist",
        "analyze": "webpack-bundle-analyzer dist/react-snapencode-player.min.js",
        "test:build": "node test-build.js"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
